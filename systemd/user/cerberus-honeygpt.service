[Unit]
Description=CERBERUS HoneyGPT AI Bridge
After=network.target

[Service]
Type=simple
WorkingDirectory=/home/ph/cerberus-honeypot
ExecStart=/home/ph/cerberus-honeypot/venv/bin/python3 src/honeygpt/main.py
Environment=OLLAMA_URL=http://localhost:11434/api/generate
Environment=DEVICE_TYPE=router
Restart=always
RestartSec=10

# Zero-Impact Priority (Background only)
Nice=19
CPUWeight=20
IOSchedulingClass=idle

# Security hardening
NoNewPrivileges=true
PrivateTmp=true

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=cerberus-honeygpt

[Install]
WantedBy=default.target
